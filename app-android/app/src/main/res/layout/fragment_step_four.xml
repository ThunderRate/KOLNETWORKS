<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlack"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bindtag.StepFourFragment">

    <TextView
        android:id="@+id/title"
        style="@style/textWhiteMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/login_step4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPre">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_age"
                style="@style/textWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_1"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgAge"
                android:layout_margin="5dp"
                app:chipSpacingHorizontal="15dp"
                app:chipSpacingVertical="15dp"
                app:chipMinTouchTargetSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_age"
                android:foregroundGravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/title_area"
                style="@style/textWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_2"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/cgAge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgArea"
                android:layout_margin="5dp"
                app:chipSpacingVertical="15dp"
                app:chipMinTouchTargetSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_area"
                android:foregroundGravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_social"
                style="@style/textWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_3"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/cgArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgSocial"
                android:layout_margin="5dp"
                app:chipSpacingVertical="15dp"
                app:chipMinTouchTargetSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_social"
                android:foregroundGravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_content"
                style="@style/textWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_4"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/cgSocial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgContent"
                android:layout_margin="5dp"
                app:chipSpacingVertical="15dp"
                app:chipMinTouchTargetSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_content"
                android:foregroundGravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_job"
                style="@style/textWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_5"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/cgContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgJob"
                android:layout_margin="5dp"
                app:chipSpacingVertical="15dp"
                app:chipMinTouchTargetSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_job"
                android:foregroundGravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_personal"
                style="@style/textWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_6"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/cgJob"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgPersonal"
                android:layout_margin="5dp"
                app:chipSpacingVertical="15dp"
                app:chipMinTouchTargetSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_personal"
                android:foregroundGravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btnNext"
        style="@style/textWhiteMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_next"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/btnPre"
        style="@style/textWhiteMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:text="@string/common_pre"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>