<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ig"
                        android:height="40dp"
                        style="@style/textBlackMedium"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/user_ig"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btnAddIg"
                        style="@style/textGreenMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="@string/update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <FrameLayout
                        android:id="@+id/frameLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/ig"
                        tools:layout_editor_absoluteX="15dp" />

                    <EditText
                        android:id="@+id/etIg"
                        style="@style/textGreySmall"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:hint="@string/hint_ig_id"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                        tools:layout_editor_absoluteX="15dp" />

                    <FrameLayout
                        android:id="@+id/frameLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/etIg"

                        tools:layout_editor_absoluteX="15dp" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/expect_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

                    <TextView
                        android:id="@+id/tvIgPrice"
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text=" -- "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fb"
                        android:height="40dp"
                        style="@style/textBlackMedium"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/user_fb"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btnAddFb"
                        style="@style/textGreenMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="@string/update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <FrameLayout
                        android:id="@+id/frameLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/fb"
                        tools:layout_editor_absoluteX="15dp" />

                    <EditText
                        android:id="@+id/etFb"
                        style="@style/textGreySmall"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:hint="@string/hint_fb_id"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
                        tools:layout_editor_absoluteX="15dp" />

                    <FrameLayout
                        android:id="@+id/frameLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/etFb"

                        tools:layout_editor_absoluteX="15dp" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/expect_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />

                    <TextView
                        android:id="@+id/tvFbPrice"
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text=" -- "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yt"
                        android:height="40dp"
                        style="@style/textBlackMedium"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/user_yt"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btnAddYt"
                        style="@style/textGreenMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="@string/update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <FrameLayout
                        android:id="@+id/frameLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/yt"
                        tools:layout_editor_absoluteX="15dp" />

                    <EditText
                        android:id="@+id/etYt"
                        style="@style/textGreySmall"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:hint="@string/hint_yt_id"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout7"
                        tools:layout_editor_absoluteX="15dp" />

                    <FrameLayout
                        android:id="@+id/frameLayout8"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/etYt"

                        tools:layout_editor_absoluteX="15dp" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/expect_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout8" />

                    <TextView
                        android:id="@+id/tvYtPrice"
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text=" -- "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout8" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bg"
                        android:height="40dp"
                        style="@style/textBlackMedium"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/user_blog"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btnAddBg"
                        style="@style/textGreenMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="@string/update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <FrameLayout
                        android:id="@+id/frameLayout9"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/bg"
                        tools:layout_editor_absoluteX="15dp" />

                    <EditText
                        android:id="@+id/etBg"
                        style="@style/textGreySmall"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:hint="@string/hint_bg_id"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout9"
                        tools:layout_editor_absoluteX="15dp" />

                    <FrameLayout
                        android:id="@+id/frameLayout10"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBackgroundDivider"
                        app:layout_constraintTop_toBottomOf="@+id/etBg"

                        tools:layout_editor_absoluteX="15dp" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/expect_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout10" />

                    <TextView
                        android:id="@+id/tvBgPrice"
                        style="@style/textBlackSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text=" -- "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout10" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>